{% extends "layout.html" %}
{% block title %}
quedrop
{% endblock %}
{% block content %}
    {%if form %}
        <div class="start">
			<h1 id="title">{{ form.title }}</h1>
			<p id="description">{{ form.description }}</p>
			<h2> QUESTIONS: </h2>
		</div>
		<form id="answer-form" action="post" method="POST" autocomplete="off">
			{% for index in range(form.questions_count) %}
				<div class = q_a> 
					<div class = "question">
						<p id="question_{{index}}"> {{ index+1 }}. {{ form.questions[index].text }} </p>
					</div>
					<div class ="answer">
						<input type="text" name="question_{{index}}" placeholder="Your answer.."  required>
					</div>
				</div>
			{% endfor %}
			<input type="submit" value="Submit" class="button"/>
			<!-- <button type="submit" class="button"> <h3>DROP YOUR ANSWERS<h3> </button> -->
		</form>
    {% else %}
        <span> dunno </span>
    {% endif %}
{% endblock %}

{% block body_scripts %}
<script src="{{url_for('static', filename='user-form-script.js')}}"></script>
{% endblock %}